@model ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <h2 class="mb-4">@Model.Title</h2>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.PictureUrl" alt="@Model.Title" class="img-fluid rounded shadow-sm" />
        </div>

        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Author</dt>
                <dd class="col-sm-9">@Model.Author</dd>

                <dt class="col-sm-3">ISBN</dt>
                <dd class="col-sm-9">@Model.ISBN</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.CategoryId</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Html.Raw(Model.Description)</dd>
            </dl>

            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
