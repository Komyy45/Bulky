@using Bulky.Core.Domain.Entities
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject UserManager<ApplicationUser> userManager;

@{
    var id = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    var isInRole = false;
    if (id is not null)
       isInRole = await userManager.IsInRoleAsync(new ApplicationUser() { Id = id }, "Admin");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bulky</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bulky.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.2/css/dataTables.dataTables.min.css" />
    <!-- Rich Text Editor CSS -->
    <link href="https://richtexteditor.com/richtexteditor/rte_theme_default.css" rel="stylesheet" />

</head>
<body>
<header>
        <div class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3 px-5  justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Bulky</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                @if(!isInRole)
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Product" asp-action="Index">Browse Products</a>
                    </li>

                }

                @if(isInRole)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white"
                           href="#"
                           id="contentDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Content Management
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="contentDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a>
                            </li>
                        </ul>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
            </ul>

            <div class="d-flex gap-3">
                @if(id is null)
                {
                    <a class="btn btn-secondary" asp-area="Identity" asp-controller="Account" asp-action="Login">Sign In</a>
                    <a class="btn btn-success" asp-area="Identity" asp-controller="Account" asp-action="Register">Sign Up</a>
                }
                else{
                    <a class="btn btn-success" asp-area="Customer" asp-controller="Basket" asp-action="Index">Go to cart</a>
                    <a class="btn btn-danger" asp-area="Identity" asp-controller="Account" asp-action="Logout">Sign Out</a>
                }
            </div>
        </div>

</header>



<div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white bg-black">
        <div class="container">
            &copy; 2025 - Bulky - <a class="text-light" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/2.3.2/js/dataTables.min.js" asp-append-version="true"></script>
    <script type="text/javascript">

        
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
