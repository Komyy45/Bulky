@using Bulky.Core.Ports.In
@model ProductCreateEditViewModel
@inject ICategoryService CategoryService
@inject IConfiguration configuration
@{
    ViewBag.Title = "Edit Product";
    Layout = "_Layout";
    var selectItems = await CategoryService.GetAllAsync(CancellationToken.None);
    var categorySelectList = selectItems
        .Select(c => new SelectListItem
                {
                    Text = c.Name,
                    Value = c.Id.ToString()
                }).ToList();
}

<h2>Edit Product</h2>
<div class="row mb-3">
    <div class="col-md-4">
        <img id="imagePreview" src="@configuration["AzureStorage:BaseUrl"]/images/@Model.ExistingPicture" alt="Image Preview" class="img-fluid rounded shadow-sm border" />
    </div>
    <div class="col-md-8">
        <form asp-controller="Product" asp-action="Edit" method="post" class="mt-4" enctype="multipart/form-data">
            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" id="editor"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Author" class="form-label"></label>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ISBN" class="form-label"></label>
                    <input asp-for="ISBN" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" type="number" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" asp-items="categorySelectList" class="form-select">
                        <option value="" selected>Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <label asp-for="Picture" class="form-label"></label>
                    <input asp-for="Picture" id="imageInput" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">Edit</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://richtexteditor.com/richtexteditor/rte.js"></script>
    <script src="https://richtexteditor.com/richtexteditor/plugins/all_plugins.js"></script>
    <script type="text/javascript">
        var editor1 = new RichTextEditor("#editor");

        document.getElementById("imageInput").addEventListener("change", function () {
            const file = this.files[0];
            const preview = document.getElementById("imagePreview");

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                };
                reader.readAsDataURL(file);
            } else {
                preview.src = "#";
                preview.style.display = "none";
            }
        });
    </script>
}
