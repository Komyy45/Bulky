@using Bulky.Core.Application.DTOs.Basket
@model BasketDto
@inject IConfiguration configuration
@{
    ViewData["Title"] = "Basket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8">
            @foreach (var item in Model.Items)
            {
                <div class="d-flex align-items-start mb-4 border rounded p-3">
                    <img src="@configuration["AzureStorage:BaseUrl"]/images/@item.PictureUrl" alt="@item.Name" width="100" height="100" class="me-3 rounded" />
                    <div class="flex-grow-1">
                        <h6 class="mb-1">@item.Name</h6>
                        <p class="mb-1">@item.Price.ToString("C") / day</p>
                        <div class="d-flex align-items-center">
                            <input type="hidden" name="ItemId" value="@item.Id" />
                            <a asp-area="Customer" asp-controller="Basket" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm me-2 fs-3">-</a>
                            <span class="border px-3 py-1">@item.Quantity</span>
                            <a asp-area="Customer" asp-controller="Basket" asp-action="Add" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm ms-2 fs-3">+</a>
                        </div>
                    </div>
                </div>
            }
            

            <div class="bg-light p-3 rounded mt-4">
                <h5>Total: @Model.TotalPrice.ToString("C")</h5>
            </div>

            <div class="alert alert-warning mt-2">
                <strong>Note:</strong> A discount is applied based on rental duration.
            </div>
        </div>

        <div class="col-md-4">
            <h5 class="mb-3">Create Quote</h5>
            <form asp-action="SubmitQuote" method="post">
                <h6>Step 1 - Rental Dates</h6>
                <div class="mb-3">
                    <label class="form-label">Start Date</label>
                    <input type="date" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">End Date</label>
                    <input type="date" class="form-control" />
                </div>

                <h6>Step 2 - Your Info</h6>
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Company</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control"  />
                </div>
                <div class="mb-3">
                    <label class="form-label">Billing Address</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">City</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Postal Code</label>
                    <input type="text" class="form-control"  />
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone</label>
                    <input type="text" class="form-control"  />
                </div>
                <button type="submit" class="btn btn-primary w-100">Order Now</button>
            </form>
        </div>
    </div>
</div>
